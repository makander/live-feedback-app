{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./src/server.js",
  "scripts": {
    "lint": "eslint 'src/**/*.js' --fix; exit 0",
    "format": "prettier-eslint 'server/**/*.{js,json}' --write",
    "test": "\"./node_modules/mocha/bin/mocha\" --require @babel/register --timeout 5000 --exit \"./src/tests/basic.test.js\"",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d build",
    "build": "npm run clean && npm run build-babel",
    "start": "node ./build/server.js",
    "dev": "nodemon -L ./src/server.js --exec babel-node"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@babel/register": "^7.4.0",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-winston": "^3.1.0",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.14",
    "mongo-mock": "^3.7.1",
    "mongoose": "^5.3.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^2.2.0",
    "socketio-jwt-auth": "^0.1.0",
    "validator": "^10.9.0",
    "winston": "^3.2.1",
    "winston-mongodb": "^5.0.0"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "lodash.merge": "^4.6.2",
    "mocha": "^10.2.0",
    "nodemon": "^1.18.10",
    "prettier-eslint-cli": "^4.7.1",
    "should": "^13.2.3",
    "should-http": "^0.1.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  }
